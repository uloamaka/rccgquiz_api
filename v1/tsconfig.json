{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["src/**/*.ts", "src/**/*.yaml"],
  "exclude": ["node_modules"]
}
 